sudo apt-get install lxc
sudo lxc-create -t download -n myapp -- -d ubuntu -r focal -a amd64
sudo lxc-create -t download -n dz1 -- -d ubuntu -r focal -a amd64
sudo lxc-create -t download -n dz2 -- -d ubuntu -r focal -a amd64
sudo lxc-start myapp
sudo lxc-start dz1
sudo lxc-start dz2
sudo lxc-ls -f



